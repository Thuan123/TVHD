<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/film_img"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:maxHeight="115dp"
        android:paddingBottom="8dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/img_layout"
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:layout_alignBottom="@+id/film_img"
        android:layout_alignLeft="@+id/film_img"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/film_img"
        android:background="@drawable/bg_title"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:text="America&apos;s Next Top Model 2014"
            android:textColor="#fed044"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>