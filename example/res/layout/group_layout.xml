<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="74dp"
    android:id="@+id/group_id"
    android:orientation="vertical" 
    android:weightSum="2" >
   <LinearLayout 
       android:layout_width="fill_parent"
       android:layout_height="0dp"
       android:background="@drawable/bar_category"
       android:layout_weight="1.97"
       android:orientation="horizontal"
       android:weightSum="2">
       
    <TextView
        android:id="@+id/groupName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:layout_weight="1.6"
        android:gravity="center_vertical|left"
        android:paddingLeft="15dp"
        android:text="TIME COUNT"
        android:textColor="#ffe65a"
        android:textSize="20sp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:layout_gravity="center"
        android:layout_weight="0.4" >
        <ImageView
            android:id="@+id/icon_ex"
            android:layout_width="22dp"
            android:layout_height="22dp"        
            android:layout_gravity="center"
            android:src="@drawable/icon_open" />
        <ImageView
            android:id="@+id/icon_no_ex"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_close" 
            android:visibility="gone"/>
    </FrameLayout>
   </LinearLayout>
   <View 
       android:layout_width="fill_parent"
       android:layout_height="0dp"
       android:layout_weight="0.03"
       android:background="@drawable/line_menu"
       />
</LinearLayout>